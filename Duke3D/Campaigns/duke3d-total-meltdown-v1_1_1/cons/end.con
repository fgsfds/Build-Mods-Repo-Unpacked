// Common code

appendevent EVENT_WORLD
  for V_This_Sprite allsprites
  {
    setuserdef[].vm_sprite V_This_Sprite
    add V_Sprite_Count 1
  }
endevent

appendevent EVENT_DISPLAYSTART
  set V_Mark_DISPLAYSTART 1
endevent

appendevent EVENT_DISPLAYSBAR
  set V_Mark_DISPLAYSBAR 1
endevent

appendevent EVENT_DISPLAYEND
  set V_Mark_DISPLAYSTART 0
  set V_Mark_DISPLAYSBAR 0
endevent