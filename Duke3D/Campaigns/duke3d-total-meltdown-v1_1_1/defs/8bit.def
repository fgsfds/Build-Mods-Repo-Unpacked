// Base palettes

basepalette 1 { raw { file "8bit/palettes/basepal2.raw" } }
basepalette 2 { raw { file "8bit/palettes/basepal2.raw" offset 768 } }

// Shade table
// Must be loaded before lookup palettes

palookup 0 { raw { file "8bit/palettes/shadetable.raw" } }

// Blending tables

blendtable 0 { raw { file "8bit/palettes/transpal.raw" } }
blendtable D_Transpal_alpha { raw { file "8bit/palettes/transpal.raw" offset 65536 } }
blendtable D_Transpal_additive { raw { file "8bit/palettes/transpal.raw" offset 131072 } }

// Lookups palettes

palookup 1 { raw { file "8bit/palettes/pallookup2.raw" noshades } }
palookup 2 { raw { file "8bit/palettes/pallookup2.raw" offset 256 noshades } }
palookup 4 { raw { file "8bit/palettes/pallookup2.raw" offset 512 noshades } }
palookup 6 { raw { file "8bit/palettes/pallookup2.raw" offset 768 noshades } }
