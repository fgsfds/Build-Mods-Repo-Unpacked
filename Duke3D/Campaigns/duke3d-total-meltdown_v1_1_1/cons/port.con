// Don't change restart level quote

appendevent EVENT_SETDEFAULTS
  // redefinequote 13 PRESS ANY BUTTON TO CONTINUE
  redefinequote 13 PRESS ANY KEY TO CONTINUE
endevent

// Display quick kick quote normally

appendevent EVENT_QUICKKICK
  ife RETURN 0
    quote 80
endevent