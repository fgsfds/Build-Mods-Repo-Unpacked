// Stop music during loading

appendevent EVENT_DISPLAYLOADINGSCREEN
  ifn userdef[].music_episode D_Temp_Volume
  ifn userdef[].music_level MUS_NULL
    swaptrackslot D_Temp_Volume MUS_NULL // stopallmusic is broken
endevent

// Misc parameters

appendevent EVENT_SETDEFAULTS
  setuserdef[].menubackground 0

  setuserdef[].menu_shadedeselected 0
  setuserdef[].menu_shadedisabled 0

  // Don't set modern status bar by default
  setuserdef[].screen_size 8
  setuserdef[].statusbarmode 0
  setuserdef[].althud 0
  setuserdef[].crosshairscale 100

  // Don't display the level name when the game starts
  setuserdef[].show_level_text 0
endevent

// Revert menu background

appendevent EVENT_GETMENUTILE
  set RETURN BIGHOLE
endevent

