  {
	sound CAPT_RECOG
	sizeat 40 40
	cstat 257
  }
	ai AILIZSPIT
	cactor FLAMEENFORCER
enda

useractor enemy FLAMEENFORCERJUMP FLAMEENFORCERSTRENGTH

 ifai 0
  {
	sound CAPT_RECOG
	sizeat 40 40
	cstat 257
  }

	ai AILIZJUMPENEMY
	cactor FLAMEENFORCER
enda

useractor enemy FLAMEENFORCER FLAMEENFORCERSTRENGTH
  fall
  
  ifai 0
  {
	sound CAPT_RECOG
	sizeat 40 40
	cstat 257
  }
  
   ifdead nullop
  else ifg a_plasmaeffect 0
	{
		ifrnd 64
			ai AILIZFLEENEMY
	}
  
  state lizcode
enda


