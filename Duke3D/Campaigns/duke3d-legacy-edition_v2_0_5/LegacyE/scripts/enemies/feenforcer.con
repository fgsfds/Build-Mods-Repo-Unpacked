useractor enemystayput FLAMEENFORCERSTAYPUT FLAMEENFORCERSTRENGTH
 ifai 0
  {
	sound CAPT_RECOG
	sizeat 40 40
	cstat 257
  }
  
  ai AILIZGETENEMY
  cactor FLAMEENFORCER
 enda

useractor enemy FLAMEENFORCERSPITTING FLAMEENFORCERSTRENGTH
