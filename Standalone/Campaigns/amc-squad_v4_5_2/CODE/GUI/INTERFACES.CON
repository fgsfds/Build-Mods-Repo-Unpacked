define TEXTX 106
define TEXTXS 107

define TEXTX2 86
define TEXTXS2 87

var MENU_TILE 1 0

var SCROLL_POSITION 0 1
var SCROLL_POS_MAX 0 1

defstate SCROLL_POS_RESET
	set SCROLL_POSITION 0
ends

defstate SCROLL_POS
	set disp_temp SCROLL_POSITION
	mulvar disp_temp 7
	sub gui_pos_y disp_temp
ends

defstate SCROLL_WHEEL

	// Handle scrolling via scroll wheel
	getinput[].bits disp_temp2
	shiftvarr disp_temp2 8
	andvar disp_temp2 0xF // what's dis

	switch disp_temp2
		case 11
			ifg SCROLL_POSITION 0
				sub SCROLL_POSITION 1
			break
		case 12
			ifl SCROLL_POSITION SCROLL_POS_MAX
				add SCROLL_POSITION 1
			break
	endswitch

	// update the y coordinate based on scroll position
	set disp_temp3 SCROLL_POSITION

	// someone better than me can rewrite this to be dynamic
	ife SCROLL_POS_MAX 40 mulvar disp_temp3 3
	else ife SCROLL_POS_MAX 30 mulvar disp_temp3 4
	else mulvar disp_temp3 6

	ife PCINTER 6 set disp_temp4 58 else
	set disp_temp4 48

	add disp_temp4 disp_temp3
	guniqhudid 5

	ife PCINTER 6 set gui_pos_x 125 else
	set gui_pos_x 87
	rotatesprite gui_pos_x disp_temp4 8192 0 13717 0 0 4096 0 0 xdim ydim
	set gui_pos_y disp_temp4

	state CURSOR_OVER_ITEM
	ifl gui_pos_x_temp 10
	 ifg gui_pos_x_temp -10
	  ifl gui_pos_y_temp 13
	   ifg gui_pos_y_temp -13
	{
		guniqhudid 6
		rotatesprite gui_pos_x disp_temp4 8192 0 13717 disp_pulse 0 4096 0 0 xdim ydim
		ifand BITS_PRESS 4 set gui_element_lock 1
	}

	// handle scrolling by physically dragging down the button
	ife gui_element_lock 1
	{
		guniqhudid 7
		rotatesprite gui_pos_x disp_temp4 7492 0 13717 0 16 4096 0 0 xdim ydim
		ifg input[].horz 0
		 ifg SCROLL_POSITION 0
			{
			ifcount 2
				{
				sub SCROLL_POSITION 1
				resetcount
				}
			}
		else
		ifl input[].horz 0
		 ifl SCROLL_POSITION SCROLL_POS_MAX
			{
			ifcount 2
				{
				add SCROLL_POSITION 1
				resetcount
				}
			}
		ifand BITS_PRESS 4 nullop else set gui_element_lock 0
	}
	guniqhudid 0
ends

